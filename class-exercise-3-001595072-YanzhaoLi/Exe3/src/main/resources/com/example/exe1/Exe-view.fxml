<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.exe1.ExeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox prefHeight="100.0" prefWidth="373.0">
         <children>
            <TextField fx:id="num1" prefHeight="104.0" prefWidth="51.0" />
            <Label fx:id="sign" prefHeight="110.0" prefWidth="30.0">
               <font>
                  <Font size="24.0" />
               </font></Label>
            <TextField fx:id="num2" prefHeight="116.0" prefWidth="53.0" />
            <Label fx:id="re" prefHeight="100.0" prefWidth="239.0">
               <font>
                  <Font size="24.0" />
               </font></Label>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#plus" text="+" />
            <Button mnemonicParsing="false" onAction="#minus" text="-" />
            <Button mnemonicParsing="false" onAction="#mult" text="*" />
            <Button mnemonicParsing="false" onAction="#divi" text="/" />
            <Button mnemonicParsing="false" onAction="#eq" text="=" />
         </children>
      </HBox>
   </children>
</VBox>
